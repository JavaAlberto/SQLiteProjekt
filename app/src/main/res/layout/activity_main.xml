<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editText_hint_vorname"
            android:id="@+id/editText_vorname"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:textSize="12sp"
            tools:textSize="8sp"
            android:gravity="center_vertical|center_horizontal" />
        <View
            android:paddingTop="4dp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FF0000FF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editText_hint_nachname"
            android:id="@+id/editText_nachname"
            android:background="@drawable/border"
            android:textSize="12sp"
            android:layout_weight="4"
            tools:textSize="8sp"
            android:gravity="center_vertical|center_horizontal" />

        <View
            android:paddingTop="4dp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FF0000FF" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/editText_hint_geburtsdatum"
            android:id="@+id/editText_geburtstag"
            android:background="@drawable/border"
            android:textSize="12sp"
            android:layout_weight="4"
            tools:textSize="8sp"
            android:inputType="date"
            android:gravity="center_vertical|center_horizontal" />
        <View
            android:paddingTop="4dp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FF0000FF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_add_user"
            android:id="@+id/button_add_user"
            tools:textSize="10sp" />
    </LinearLayout>
   <!-- Horizontale Linie -->
    <View
        android:paddingTop="4dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF0000FF" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_personendaten"
        android:layout_gravity="center_horizontal" />


</LinearLayout>

